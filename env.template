# ==============================================================================
# EVENZI - Variables d'environnement de production
# ==============================================================================

# Base de données PostgreSQL (OBLIGATOIRE)
# Exemple avec Neon : postgresql://username:password@ep-xxx.neon.tech/database?sslmode=require
DATABASE_URL="postgresql://username:password@hostname:port/database"

# NextAuth - Configuration d'authentification (OBLIGATOIRE)
# Générer avec : openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"
NEXTAUTH_URL="https://your-domain.vercel.app"

# Email - Configuration Resend (OPTIONNEL)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxx"

# Vercel Blob Storage (OPTIONNEL - généré automatiquement par Vercel)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# Configuration OAuth Google (OPTIONNEL)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Configuration de production (OBLIGATOIRE)
NODE_ENV="production"
PRISMA_GENERATE_DATAPROXY="true"

